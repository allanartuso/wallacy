{
  "name": "wallacy",
  "displayName": "Wallacy",
  "description": "A continuos test runner",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/allanartuso/wallacy"
  },
  "engines": {
    "vscode": "^1.104.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wallacy.smartStart",
    "onCommand:wallacy.helloWorld",
    "onCommand:wallacy.stopEngine"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wallacy.helloWorld",
        "title": "Wallacy: Hello World"
      },
      {
        "command": "wallacy.smartStart",
        "title": "Wallacy: Smart Start",
        "icon": "$(play)"
      },
      {
        "command": "wallacy.stopEngine",
        "title": "Wallacy: Stop Engine",
        "icon": "$(debug-stop)"
      },
      {
        "command": "wallacy.resetCache",
        "title": "Wallacy: Reset Cache",
        "icon": "$(trash)"
      },
      {
        "command": "wallacy.forceRerun",
        "title": "Wallacy: Force Re-run (Skip Cache)",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "wallacy.smartStart",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorFocus && resourceLangId =~ /^(typescript|javascript|typescriptreact|javascriptreact)$/"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.js",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "npm-run-all -p watch:*",
    "vsix": "npx @vscode/vsce package --no-dependencies",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:webview": "cd webview-ui && npm run build:watch",
    "package": "npm run check-types && npm run lint && npm run build:webview && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:integration": "vitest run --config vitest.config.mts",
    "test:integration:watch": "vitest watch --config vitest.config.mts",
    "install:it": "npm run compile && npm run vsix && code --install-extension wallacy-0.0.1.vsix",
    "install:fe": "npm run build:webview && npm run compile && npm run vsix && code --install-extension wallacy-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "source-map": "^0.7.6",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "vitest": "^4.0.18"
  }
}
