{
  "name": "wallacy",
  "displayName": "Wallacy",
  "description": "A continuos test runner",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wallacy.smartStart",
    "onCommand:wallacy.helloWorld",
    "onCommand:wallacy.stopEngine"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wallacy.helloWorld",
        "title": "Wallacy: Hello World"
      },
      {
        "command": "wallacy.smartStart",
        "title": "Wallacy: Smart Start",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "wallacy.smartStart",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorFocus && resourceLangId =~ /^(typescript|javascript|typescriptreact|javascriptreact)$/"
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "vsix": "npx @vscode/vsce package --no-dependencies",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@babel/generator": "^7.29.1",
    "@babel/parser": "^7.29.0",
    "@babel/traverse": "^7.29.0",
    "chokidar": "^5.0.0",
    "source-map": "^0.7.6",
    "ts-node": "^10.9.2",
    "vitest": "^4.0.18",
    "ws": "^8.19.0"
  }
}
